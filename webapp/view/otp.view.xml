<mvc:View 
    controllerName="com.applexus.technest.controller.otp"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    class= "outer-bg"
>
<ScrollContainer id="_IDGenScrollContainer1" 
width="100%"
height="100%"
vertical="true"
horizontal="true">
  <FlexBox
            id="flexbox1"
            alignItems="Center"
            justifyContent="Center"
        >
            <VBox
                id="vbox1"
                class="login-container"
                alignItems="Center"
                justifyContent="Center"
            >
                <Title
                    id="title1"
                    text="OTP Verification"
                    class="fontsize"

                />
                <VBox
                    id="vbox2"
                    width="230px"
                >
                    <Input
                        id="otp"
                        placeholder="Enter your OTP here"
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                   
                    
                    <HBox
                        id="hbox1"
                        justifyContent="Center"
                    >
                        <Button
                            id="btn1"
                            text="Enter"
                            press="onEnterPress"
                            class="sapUiSmallMargin"
                        />
                    </HBox>
                </VBox>
            </VBox>
        </FlexBox>
        </ScrollContainer>
      
</mvc:View>
