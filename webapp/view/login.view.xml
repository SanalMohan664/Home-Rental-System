<mvc:View xmlns:landvisz="sap.landvisz"
    controllerName="com.applexus.technest.controller.login"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    class= "outer-bg"
>
<ScrollContainer id="_IDGenScrollContainer1" 
width="100%"
height="100%"
vertical="true"
horizontal="true">
<Page id="_IDGenPage1" backgroundDesign="Standard" title="Welcome to TechNest!"></Page>
  <FlexBox
            id="flexbox1"
            alignItems="Center"
            justifyContent="Center"
        >
            <VBox
                id="vbox1"
                class="login-container"
                alignItems="Center"
                justifyContent="Center"
            >
                <Title
                    id="title1"
                    text="LOGIN"
                    class="fontsize"

                />
                <VBox
                    id="vbox2"
                    width="230px"
                >
                    <Input
                        id="emailInput"
                        type="Email"
                        placeholder="Personal Email Id"
                        required="true"
                        class="sapUiSmallMarginTop"
                    />
                    <Input
                        id="passwordInput"
                        type="Password"
                        placeholder="Password"
                        required="true"
                        class="sapUiSmallMarginTopBottom"
                    />
                    <Label id="_IDGenLabel1" text="New User?" class="text-color">
                    </Label>
                    <Link
                        id="link1"
                        text="Register Here"
                        press="onNewRegisterPress"
                    />
                    <HBox
                        id="hbox1"
                        justifyContent="Center"
                    >
                        <Button
                            id="btn1"
                            text="Login"
                            press="onLoginPress"
                            class="sapUiTinyMargin"
                        />
                    </HBox>
                </VBox>
            </VBox>
        </FlexBox>
        </ScrollContainer>
      
</mvc:View>
